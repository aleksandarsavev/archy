#!/usr/bin/env bash

# version 20171018-1018

#
# Files and directories
#
alias ..="cd .."
alias ll="ls -lh --color=auto"
alias la="ll -a"

#
# Calendar
#
# First day of week to be Monday
#
alias cal="cal -m"

#
# Volume
#
STEP=10
alias volu="amixer set Master $STEP%+"
alias vold="amixer set Master $STEP%-"

#
# SSH
#
alias ssh-magic="ssh -o StrictHostKeyChecking=no -o UserKnownHostsFile=/dev/null"

#
# Git
#
alias git-graph="git log --graph --decorate --oneline"

#
# Tar
#
alias targz-create="tar -zcvf"
alias targz-extract="tar xf"

#
# Monitors
#
alias monitor-on-left="xrandr --output eDP-1 --auto --output HDMI-1 --auto --left-of eDP-1"

